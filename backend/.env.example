# Environment Configuration for THALE Backend
# Copy this file to .env and fill in your values

# Application
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:5173

# AWS Configuration
AWS_PROFILE=nice-dev
AWS_REGION=eu-west-1

# Whisper Model Configuration
WHISPER_MODEL_ID=NbAiLab/nb-whisper-large
WHISPER_LANGUAGE=no
WHISPER_CHUNK_LENGTH_S=30

# Bedrock Configuration
BEDROCK_MODEL_ID=eu.anthropic.claude-sonnet-4-5-20250929-v1:0
BEDROCK_MAX_TOKENS=1000

# File Upload Limits
MAX_UPLOAD_SIZE_MB=500
ALLOWED_AUDIO_EXTENSIONS=.m4a,.wav,.mp3,.aac,.flac,.ogg,.webm
